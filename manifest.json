{
    "name": "Copyable",
    "description": "A Chrome extension that makes text copyable.",
    "version": "0.1",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "permissions": ["storage"],
    "action": {
        "default_popup": "ui.html",
        "default_icon": {
            "16": "16.png",
            "32": "32.png",
            "48": "48.png",
            "128": "128.png"
        }
    },
    "icons": {
        "16": "16.png",
        "48": "48.png",
        "32": "32.png",
        "128": "128.png"
    }
}